<!DOCTYPE html>
<html>
	<head>
		<title>Portfolio</title>
		<meta name="description" content="Portfolio" />
		<meta name="author" content="Antoine Drabble" />
		<meta name="viewport" content="width=device-width" />
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/portfolioportfolio/css/bootstrap.min.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/portfolioportfolio/css/bootstrap-theme.min.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/portfolioportfolio/font-awesome/css/font-awesome.min.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('bundles/portfolioportfolio/css/design.css') }}" />
		
		<script src="//code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
		<script type="text/javascript" src="{{ asset('bundles/portfolioportfolio/js/bootstrap.min.js') }}"></script>
		<script type="text/javascript" src="{{ asset('bundles/portfolioportfolio/js/vendor/jquery.ui.widget.js') }}"></script> 
		<script type="text/javascript" src="{{ asset('bundles/portfolioportfolio/js/jquery.slides.min.js') }}"></script> 
		<script type="text/javascript" src="{{ asset('bundles/portfolioportfolio/js/bootbox.js') }}"></script> 
		<script type="text/javascript" src="{{ asset('bundles/portfolioportfolio/js/portfolio.js') }}"></script> 
	</head>
	<body>
		<div class="container">
			<div class="row">
			  <div class="col-md-7">
				<h1><a href="/">Portfolio</a></h1>
			  </div>
			  <div class="col-md-3">
					<br/>
					<form class="navbar-form" role="search">
					  <div class="input-group">
						<input type="text" class="form-control" placeholder="Search" name="search-term" id="search-term">
						<div class="input-group-btn">
						  <button  class="btn btn-default blue" type="submit"><span class="glyphicon icon-search"></span></button>
						</div>
					  </div>
					</form>
				</div>
			  <div class="col-md-2">
				<br /><br/>
				<p class="pull-right">
					<a href="#"><i rel="tooltip" data-original-title="Twitter" class="icon-twitter blue"></i></a>
					<a href="#"><i rel="tooltip" data-original-title="Facebook" class="icon-facebook blue"></i></a>
					<a href="#"><i rel="tooltip" data-original-title="Youtube" class="icon-youtube blue"></i></a>					
					<a href="#"><i rel="tooltip" data-original-title="Google plus" class="icon-google-plus blue"></i></a>
					<a href="#"><i rel="tooltip" data-original-title="Pinterest" class="icon-pinterest blue"></i></a>                
				</p>
			  </div>
			</div>
			<hr />
			<div class="row">
				<div class="col-md-7">
					<ul class="nav nav-tabs">
						<li id="menu" {% if active == "index" %}class="active_page"{% endif%}><a href="{{ path('Portfolio') }}">Home</a></li>
						<li id="menu" {% if active == "studies" %} class="active_page"{% endif%}><a href="{{ path('Studies') }}">Studies</a></li>
						<li id="menu" {% if active == "articles" %} class="active_page"{% endif%}><a href="{{ path('Articles') }}">Articles</a></li>
						<li id="menu" {% if active == "contact" %} class="active_page"{% endif%}><a href="{{ path('Contact') }}">Contact</a></li>
						<li id="menu" {% if active == "chat" %} class="active_page"{% endif%}><a href="{{ path('Chat') }}">Chat</a></li>
						{% if app.user %}
							<li id="menu" {% if active == "account" %} class="active_page"{% endif%}><a href="{{ path('Account') }}">Account</a></li>
							<li id="menu" {% if active == "users" %} class="active_page"{% endif%}><a href="{{ path('Users') }}">Users</a></li>
						{% else %}
							<li id="menu" {% if active == "login" %} class="active_page dropdown"{% else %}class="dropdown"{% endif%}>
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Login<b class="caret"></b></a>
								<ul class="dropdown-menu unstyled pull-left dropdown-features">
									<div class="panel panel-default">
										<div class="panel-heading">
											<a href="{{ path('login') }}"><h3 class="panel-title">Please sign in</h3></a>
										</div>
										<div class="panel-body">
											<form action="{{ path('login_check') }}" method="post">
													<fieldset>
														<div class="form-group">
															<input class="form-control" placeholder="Username" type="text" id="username" name="_username"/>
														</div>
														<div class="form-group">
															<input class="form-control" placeholder="Password" name="_password" type="password" value="">
														</div>
														<div class="checkbox">
															<label>
																<input name="remember" type="checkbox" value="Remember Me"> Remember Me
															</label>
														</div>
														<input class="btn btn-lg btn-primary btn-block" type="submit" value="Login"><br/>
														<center><a href="/Symfony/web/app_dev.php/login"><input class="btn btn-lg btn-info btn-block type="submit" value="Register"></a></center>
													</fieldset>
												</form>
										</div>
									</div>
								</ul>
							</li>
						{% endif %}
					</ul>
				</div>
				<div class="col-md-3 pull-right">
					<ul class="nav">
					{% if app.user %}
						<li id="menu" class="pull-right"><a href="/Symfony/web/app_dev.php/logout">logout</a></li>
					{% endif %}
					</ul>
				</div>
			</div><br/>
 
    {% block body %}
    {% endblock %}
			<br />
			<br />
			<hr />
			<div class="row">
				<div class="col-md-12">
					<center><p>Copyright Drabble 2013</p></center>
				</div>
			</div>
		</div>
	</body>
</html>