{% extends "PortfolioPortfolioBundle::layout.html.twig" %}
 
{% block title %}
  Portfolio - {{ parent() }}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-10 col-md-offset-1 img-thumbnail"><br/>
				<span class="col-md-3">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Please sign in</h3>
						</div>
						<div class="panel-body">
							<br/>
							<form action="{{ path('login_check') }}" method="post">
							<fieldset>
								{% if error %}
									<div class="alert alert-danger">{{ error.message }}</div>
								{% endif %}
								<div class="form-group">
									<input class="form-control" placeholder="Username" type="text" id="username" name="_username" value="{{ last_username }}"/>
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="Password" name="_password" type="password" value="">
								</div>
								<div class="checkbox">
									<label>
										<input name="remember" type="checkbox" value="Remember Me"> Remember Me
									</label>
								</div>
								<button id="contact-submit" type="submit" class="btn btn-primary">Login</button>
							</fieldset>
							</form>
						</div>
					</div>
				</span>
				<span class="col-md-9">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Register</h3>
						</div>
						<div class="panel-body">
							<div class="controls">
								<form action="{{ path('login') }}" class="form" name="addArticle" method="post">
									<fieldset>
										{{ form_widget(form) }}<br/>
										<button id="contact-submit" type="submit" class="btn btn-primary">Register</button>
									</fieldset>
								</form>
							</div>
						</div>
					</div>
				</span>
			</div>
		</div>
	</div>
{% endblock %}